<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/home_background_1"
    android:orientation="vertical">

    <com.thinkcool.circletextimageview.CircleTextImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:citv_border_color="@android:color/white"
        app:citv_border_width="2dp"
        android:layout_gravity="center"
        app:citv_text_text="预约喝水"
        app:citv_text_size="20sp"
        app:citv_text_padding="30dp"
        app:citv_text_color="@android:color/white"
        app:citv_fill_color="@color/colorPrimary"
        />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_toRightOf="@id/sub_home_textview1"
        android:src="@drawable/ic_keyboard_arrow_down_black_24dp" />
    <com.thinkcool.circletextimageview.CircleTextImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:citv_border_color="@android:color/white"
        app:citv_border_width="2dp"
        android:layout_gravity="center"
        app:citv_text_text="监控水温"
        app:citv_text_size="20sp"
        app:citv_text_padding="30dp"
        app:citv_text_color="@android:color/white"
        app:citv_fill_color="@color/colorPrimary"
        />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_toRightOf="@id/sub_home_textview1"
         android:src="@drawable/ic_keyboard_arrow_down_black_24dp" />
    <com.thinkcool.circletextimageview.CircleTextImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:citv_border_color="@android:color/white"
        app:citv_border_width="2dp"
        android:layout_gravity="center"
        app:citv_text_text="众包打水"
        app:citv_text_size="20sp"
        app:citv_text_padding="30dp"
        app:citv_text_color="@android:color/white"
        app:citv_fill_color="@color/darkgray"
        />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_toRightOf="@id/sub_home_textview1"
         android:src="@drawable/ic_keyboard_arrow_down_black_24dp" />


